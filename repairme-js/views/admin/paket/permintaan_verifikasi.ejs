    <script src="../assets/js/vueJs/vue.js"></script>
    <script src="../assets/js/vueJs/axios.js"></script>
    <script>
        var vm = new Vue({

            el: "#app",
            data: {
                verifikasi: null
            },
            mounted() {
                this.getData();
            },
            methods: {
                getData(){
                    axios('/api/verifikasi/mitra').then((response) => {
                        return vm.verifikasi = response.data;
                    })
                },
                warning: function (message) {
                    setTimeout(function () {
                        toastr.warning(
                            message
                            );
                    }, 10);
                },
                success: function (success) {
                    setTimeout(function () {
                        toastr.success(
                            success
                            );
                    }, 10);
                },
                error: function (error) {
                    setTimeout(function () {
                        toastr.error(
                            error
                            );
                    }, 10);
                },
                terverifikasi(value){
                    axios.put('/api/verifikasi/terverifikasi/' + value)
                    .then(response => {
                        this.getData()
                        if (response.data.status == "success") {
                            this.success(response.data.message);
                        } else if (response.data.status == "error") {
                            this.error(response.data.message);
                        }
                    })
                }
            }



        });
    </script>
