        <script>
            var vm = new Vue({
                el: "#app",
                data: {
                    paket: null,
                    harga: null,
                    dataType: null,
                    updateType: null,
                    newMerk: {
                        merk: null,
                        jenis: "handphone"
                    }
                },
                mounted() {
                    this.getData();
                },
                methods: {
                    getData: function () {

                        axios({
                            method: 'get',
                            url: '../api/barang/merk/handphone'
                        }).then((response) => {
                            return vm._data.merk = response.data;
                        })

                        axios({
                            method: 'get',
                            url: '../api/barang/paket'
                        }).then((response) => {
                            return vm._data.dataType = response.data;
                        })

                    },
                    optionMerk: function () {
                        return this.choosed = $('#optionMerk').val();
                    },
                    warning: function (message) {
                        setTimeout(function () {
                            toastr.warning(
                                message
                            );
                        }, 10);
                    },
                    success: function (success) {
                        setTimeout(function () {
                            toastr.success(
                                success
                            );
                        }, 10);
                    },
                    error: function (error) {
                        setTimeout(function () {
                            toastr.error(
                                error
                            );
                        }, 10);
                    },
                    insertpaket: function () {
                        axios({
                            method: 'post',
                            url: '../api/barang/paket',
                            data: {
                                paket: vm._data.paket,
                                harga: vm._data.harga
                            },
                            headers: {
                                'Content-Type': 'application/json'
                            },
                        }).then((response) => {
                            this.getData();
                            if (response.data.status == "success") {
                                this.success(response.data.message);
                            } else if (response.data.status == "error") {
                                this.error(response.data.message);
                            }
                        })
                    },
                    update: function (id, paket, harga) {
                        return this.updateType = {
                            _id: id,
                            paket: paket,
                            harga: harga
                        }
                    },
                    updatePaket: function () {
                        axios({
                            method: 'put',
                            url: '../api/barang/paket/' + vm._data.updateType._id,
                            data: {
                                paket: vm._data.updateType.paket,
                                harga: vm._data.updateType.harga,
                            },
                            headers: {
                                'Content-Type': 'application/json'
                            },
                        }).then((response) => {
                            this.getData();
                            $('#modalubahpaket').modal('toggle');
                            if (response.data.status == "success") {
                                this.success(response.data.message);
                            } else if (response.data.status == "error") {
                                this.error(response.data.message);
                            }
                        })
                    },
                    deletePaket: function (id) {
                        axios({
                                method: 'delete',
                                url: '../api/barang/paket/' + id
                            })
                            .then(response => {
                                this.getData();
                                if (response.data.status == "success") {
                                    this.success(response.data.message);
                                } else if (response.data.status == "error") {
                                    this.error(response.data.message);
                                }
                            })
                    }

                }
            });
        </script>
