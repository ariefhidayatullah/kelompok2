            <script>
                var vm = new Vue({
                    el: "#app",
                    data: {
                        mitra: null
                    },
                    mounted() {
                        this.getData()
                    },
                    methods: {
                        getData(){
                            axios({
                                method: 'get',
                                url: '/api/barang/mitra'
                            }).then((response) => {
                                return vm._data.mitra = response.data;
                            })
                        },
                        deleteMitra(id){
                            axios.delete('/api/mitra/' + id)
                            .then(response => {
                                this.getData()
                                if (response.data.status == "success") {
                                    this.success(response.data.message);
                                } else if (response.data.status == "error") {
                                    this.error(response.data.message);
                                }
                            })
                            
                        },
                        warning: function (message) {
                            setTimeout(function () {
                                toastr.warning(
                                    message
                                    );
                            }, 10);
                        },
                        success: function (success) {
                            setTimeout(function () {
                                toastr.success(
                                    success
                                    );
                            }, 10);
                        },
                        error: function (error) {
                            setTimeout(function () {
                                toastr.error(
                                    error
                                    );
                            }, 10);
                        },
                    }
                })
            </script>