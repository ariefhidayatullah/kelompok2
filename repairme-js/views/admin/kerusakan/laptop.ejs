<%- include('../templates/header') %>
<div id="app" class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Dashboard Kerusakan Laptop</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="#">Admin</a></li>
						<li class="breadcrumb-item"><a href="#">Kerusakan</a></li>
						<li class="breadcrumb-item active">Tambah Kerusakan Laptop Baru</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>
	<!-- Main content -->
	<!-- Main content -->
	<section id="app" class="content">
		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Tambah Kerusakan Laptop Baru</h3>
				<div class="card-tools">
					<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
						<i class="fas fa-minus"></i></button>
						<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
							<i class="fas fa-times"></i></button>
						</div>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-sm-12">
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<div class="col-sm-6 offset-sm-1 mt-3">
									<input type="text" v-model="kerusakan" class="form-control" id="kerusakan" placeholder="Kerusakan" name="kerusakan">
								</div>
								<div class="col-sm-4 mt-3">
									<button @click="addNew" type="submit" class="btn btn-block btn-success" id="submit">TAMBAH KERUSAKAN BARU</button>
								</div>
							</div>
						</div>
					</div>
					<!-- /.card-body -->
				</div>
				<!-- /.card -->
				<!-- Default box -->
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Daftar Kerusakan Laptop</h3>
						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
								<i class="fas fa-minus"></i></button>
								<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
									<i class="fas fa-times"></i></button>
								</div>
							</div>
							<div class="card-body">
								<div class="row">
									<div class="col-sm-12">
										<div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
											<table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
												<thead>
													<tr role="row">
														<th style="width: 10px;">No</th>
														<th>Kerusakan</th>
														<th>Ubah</th>
														<th>Hapus</th>
													</tr>
												</thead>
												<tbody>
													<tr v-for="(kerusakan, index) in dataKerusakan">
														<td>{{ index + 1 }}</td>
														<td> {{ kerusakan.kerusakan }} </td>
														<td>
															<button @click="updateData(kerusakan._id, kerusakan.kerusakan)" class="btn btn-success btn-sm btn-u-kerusakanlap" data-toggle="modal" data-target="#modalubahlap">
																update
															</button>
														</td>
														<td><a @click="deleteKerusakan(kerusakan._id)" class="btn btn-danger btn-sm">Hapus</a></td>
													</tr>
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
							<div class="modal fade" id="modalubahlap" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel2">Kerusakan Laptop</h5>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
										<div v-if="updateKerusakan.kerusakan !== null" class="modal-body">
											<!-- isi dari class modal -->
											<input type="text" class="form-control" id="id_kerusakanlap_ubh" name="id_kerusakanlap_ubh" hidden>
											<input v-model="updateKerusakan.kerusakan" type="text" id="kerusakanlap_ubh" name="kerusakanlap_ubh" class="form-control mt-20">
											<div class="modal-footer">
												<button @click="updateKerusakanSubmit" name="submit" id="submit" class="btn btn-secondary">update</button>
											</div>
											
										</div>
									</div>
								</div>
							</div>
						</section>
						<!-- /.content-wrapper -->
						<!-- Main Footer -->
						
						<footer class="main-footer bg-dark">
							<strong>RepairMe &copy; 2019 <a href="http://adminlte.io">Repairme</a>.</strong>
							Situs Untuk Mencari Tempat Perbaikan Terbaik.
							<div class="float-right d-none d-sm-inline-block">
								<b>Versi</b> 1.0.0
							</div>
						</footer>
					</div>
					<%- include('../templates/footer') %>
					<script>
						var vm = new Vue({
							el: "#app",
							data: {
								kerusakan: null,
								dataKerusakan: null,
								updateKerusakan: {
									id: null,
									kerusakan: null
								}
							},
							mounted(){
								this.getData();
							},
							methods : {
								getData: function () {
									axios({
										method: 'get',
										url: '/api/barang/kerusakan/laptop'
									}).then(response => {
										return vm._data.dataKerusakan = response.data;
									})
								},
								warning: function (message) {
									setTimeout(function () {
										toastr.warning(
											message
											);
									}, 10);
								},
								success: function (success) {
									setTimeout(function () {
										toastr.success(
											success
											);
									}, 10);
								},
								error: function (error) {
									setTimeout(function () {
										toastr.error(
											error
											);
									}, 10);
								},
								addNew: function () {
									axios({
										method: 'post',
										url: '/api/barang/kerusakan',
										data: {
											kerusakan : vm._data.kerusakan,
											jenis: 'laptop'
										},
										header: {'Content-Type': 'application/json'}
									}).then(response => {
										this.getData();
										if (response.data.status == "success") {
											this.success(response.data.message);
										} else if (response.data.status == "error") {
											this.error(response.data.message);
										}
									})
								},
								updateData: function (id, kerusakan) {
									this.updateKerusakan.id = id;
									this.updateKerusakan.kerusakan = kerusakan;
								},
								updateKerusakanSubmit: function () {
									axios({
										method: 'put',
										url: '/api/barang/kerusakan/laptop',
										data: vm._data.updateKerusakan,
										header: {'Content-Type': 'application/json'}
									}).then(response => {
										this.getData();
										$('#modalubahlap').modal('toggle');
										if (response.data.status == "success") {
											this.success(response.data.message);
										} else if (response.data.status == "error") {
											this.error(response.data.message);
										}
										$('#modalubahlap').modal('toggle');
									})
								},
								deleteKerusakan: function (id) {
									axios({
										method: 'delete',
										url: '../api/barang/kerusakan/' + id
									})
									.then(response => {
										this.getData();
										if (response.data.status == "success") {
											this.success(response.data.message);
										} else if (response.data.status == "error") {
											this.error(response.data.message);
										}
									})
								}
							}
						})
					</script>