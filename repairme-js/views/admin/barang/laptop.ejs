<%- include('../templates/header') -%>
<div id="app" class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Tambah Daftar Laptop Baru</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="#">admin</a></li>
						<li class="breadcrumb-item"><a href="#">Barang</a></li>
						<li class="breadcrumb-item active">Tambah Daftar Laptop Baru</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>
	<!-- Main content -->
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<!-- Default box -->
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Tambah Daftar Laptop</h3>
						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse"
							data-toggle="tooltip" title="Collapse">
							<i class="fas fa-minus"></i></button>
							<button type="button" class="btn btn-tool" data-card-widget="remove"
							data-toggle="tooltip" title="Remove">
							<i class="fas fa-times"></i></button>
						</div>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-sm-12">
								<div class="notif">
								</div>
							</div>
						</div>
						<div class="container-fluid">
							<div class="row">
								<div v-if="merk !== null" class="col-sm-6 offset-sm-1 mt-3">
									<select @change="optionMerk" class="form-control" id="optionMerk">
										<option selected="selected">Merk</option>
										<option v-for="merk in merk">{{ merk.merk }}</option>
									</select>
								</div>
								<div class="col-sm-4 mt-3">
									<button type="button" class="btn btn-block btn-secondary"
									data-toggle="modal" data-target="#exampleModal2">TAMBAH MERK</button>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-6 offset-sm-1 mt-3">
									<input type="text" name="tipelaptop" class="form-control" id="tipelaptop"
									placeholder="Tipe Laptop Baru" v-model="tipe">
									<input type="text" name="merkchoosed" v-model="choosed" hidden>
								</div>
								<div class="col-sm-4 mt-3">
									<button type="submit" id="tambahtipe" @click="inserttipe"
									class="btn btn-block btn-success">TAMBAH
								BARANG</button>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
					<div class="row">
						<div class="col-sm-12 text-center">
							<table id="example2" class="table table-bordered table-hover dataTable"
							role="grid" aria-describedby="example2_info">
							<thead>
								<tr role="row">
									<th>Tipe Laptop</th>
									<th>Merk Laptop</th>
									<th>Ubah Data</th>
									<th>Hapus Data</th>
								</tr>
							</thead>
							<tbody>
								<tr role="row" class="odd" v-for="tipe in dataType">
									<td>{{tipe.tipe}}</td>
									<td>{{tipe.merk}}</td>
									<td><button class="btn btn-success btn-sm btn-u-ubahlap"
										data-toggle="modal" data-target="#modalubahlaptop"
										@click="update(tipe._id, tipe.tipe, tipe.merk)">
										update
									</button></td>
									<td><button @click="deleteLaptop(tipe._id)"
										class="btn btn-danger btn-sm">Hapus</button>
									</td>
								</tr>
							</tbody>
							<tfoot>
							</tfoot>
						</table>
					</div>
				</div>
			</div>
			<!-- /.card -->
		</div>
		<!-- end card body -->
	</div>
</div>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2"
aria-hidden="true">
<div class="modal-dialog" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel2">Tambah Merk Laptop Baru</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="modal-body">
			<label for="merk">Merk Laptop Baru</label>
			<input v-model="newMerk.merk" id="merk" type="text" name="merk"
			placeholder="Isi Dengan Merk Laptop Baru" class="form-control">
			<br><br>
			<button v-if="newMerk.merk !== null" @click="addNewMerk"
			class="btn btn-secondary">Tambah</button>
		</div>
	</div>
</div>
</div>
<!-- /.content-wrapper -->
<div class="modal fade" id="modalubahlaptop" tabindex="-1" role="dialog"
aria-labelledby="exampleModalLabel2" aria-hidden="true">
<div class="modal-dialog" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel2">Tipe Laptop</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div v-if="updateType !== null" class="modal-body">
			<!-- isi dari class modal -->
			<input type="text" id="tipelaptop_ubh" name="tipelaptop_ubh" class="form-control mb-3"
			v-model="updateType.merk" readonly>
			<input type="text" class="form-control" id="tipe_lp_lm" name="tipe_lp_lm"
			v-model="updateType.tipe">
			<div class="modal-footer">
				<button type="submit" name="submit" class="btn btn-secondary"
				@click="updateLaptop">update</button>
			</div>
		</div>
	</div>
</div>
</div>
<!-- Main Footer -->
<footer class="main-footer bg-dark">
	<strong>RepairMe &copy; 2019 <a href="http://adminlte.io">Repairme</a>.</strong>
	Situs Untuk Mencari Tempat Perbaikan Terbaik.
	<div class="float-right d-none d-sm-inline-block">
		<b>Versi</b> 1.0.0
	</div>
</footer>
</div>
<%- include('../templates/footer') -%>
<script>
	var vm = new Vue({
		el: "#app",
		data: {
			merk: null,
			choosed: null,
			tipe: null,
			dataType: null,
			updateType: null,
			newMerk: {
				merk: null,
				jenis: "laptop"
			}
		},
		mounted() {
			this.getData();
		},
		methods: {
			getData: function () {
				axios({
					method: 'get',
					url: '../api/barang/merk/laptop'
				}).then((response) => {
					return vm._data.merk = response.data;
				})
				axios({
					method: 'get',
					url: '../api/barang/laptop'
				}).then((response) => {
					return vm._data.dataType = response.data;
				})
			},
			optionMerk: function () {
				return this.choosed = $('#optionMerk').val();
			},
			warning: function (message) {
				setTimeout(function () {
					toastr.warning(
						message
						);
				}, 10);
			},
			success: function (success) {
				setTimeout(function () {
					toastr.success(
						success
						);
				}, 10);
			},
			error: function (error) {
				setTimeout(function () {
					toastr.error(
						error
						);
				}, 10);
			},
			addNewMerk: function () {
				axios({
					method: 'post',
					url: '../api/barang/merk',
					data: vm._data.newMerk,
					headers: {
						'Content-Type': 'application/json'
					},
				}).then((response) => {
					this.getData();
					$('#exampleModal2').modal('toggle');
					if (response.data.status == "success") {
						this.success(response.data.message);
					} else if (response.data.status == "error") {
						this.error(response.data.message);
					}
				})
			},
			inserttipe: function () {
				axios({
					method: 'post',
					url: '../api/barang/laptop',
					data: {
						tipe: vm._data.tipe,
						merk: vm._data.choosed
					},
					headers: {
						'Content-Type': 'application/json'
					},
				}).then((response) => {
					this.getData();
					if (response.data.status == "success") {
						this.success(response.data.message);
					} else if (response.data.status == "error") {
						this.error(response.data.message);
					}
				})
			},
			update: function (id, tipe, merk) {
				return this.updateType = {
					_id: id,
					tipe: tipe,
					merk: merk
				}
			},
			updateLaptop: function () {
				axios({
					method: 'put',
					url: '../api/barang/laptop/' + vm._data.updateType._id,
					data: {
						tipe: vm._data.updateType.tipe,
						merk: vm._data.updateType.merk,
					},
					headers: {
						'Content-Type': 'application/json'
					},
				}).then((response) => {
					this.getData();
					$('#modalubahlaptop').modal('toggle');
					if (response.data.status == "success") {
						this.success(response.data.message);
					} else if (response.data.status == "error") {
						this.error(response.data.message);
					}
				})
			},
			deleteLaptop: function (id) {
				axios({
					method: 'delete',
					url: '../api/barang/laptop/' + id
				})
				.then(response => {
					this.getData();
					if (response.data.status == "success") {
						this.success(response.data.message);
					} else if (response.data.status == "error") {
						this.error(response.data.message);
					}
				})
			}
		}
	});
</script>