<script src="../assets/js/vueJs/vue.js"></script>
<script src="../assets/js/vueJs/axios.js"></script>
<script>
	var vm = new Vue({
		el: "#app",
		data: {
			merk: null,
			choosed: null,
			newMerk: {
				merk: null,
				jenis: "laptop"
			}
		},
		mounted() {
			this.getData();
		},
		methods: {
			getData: function () {
			
			axios({
                method: 'get',
                url: '../api/barang/merk/laptop'
            }).then((response) => {
                return vm._data.merk = response.data;
            })

			},
			optionMerk: function () {
				return this.choosed = $('#optionMerk').val();
			},
			warning: function (message) {
				setTimeout(function() {
					toastr.warning(
						message
						);
				}, 10);
			},
			success: function (success) {
				setTimeout(function() {
					toastr.success(
						success
						);
				}, 10);
			},
			error: function (error) {
				setTimeout(function() {
					toastr.error(
						error
						);
				}, 10);
			},
			addNewMerk: function () {
				axios({
                    method: 'post',
                    url: '../api/barang/merk',
                    data: vm._data.newMerk,
                    headers: {'Content-Type': 'application/json'},
                }).then((response) => {
                    this.getData();
                    $('#exampleModal2').modal('toggle');
                    if (response.data.status == "success") {
                    	this.success(response.data.message);
                    }else if (response.data.status == "error") {
                    	this.error(response.data.message);
                    }
                })
			}
		}
	});
</script>
