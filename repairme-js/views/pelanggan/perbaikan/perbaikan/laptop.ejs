                                </tr>
                                <tr>
                                    <td><b>KEAHLIAN</b></td>
                                    <td class="keahlian">{{ showDetailMitra.data_pelanggan[0].jenis_usaha }}</td>
                                </tr>
                                <tr>
                                    <td><b>ALAMAT</b></td>
                                    <td class="alamat">{{ showDetailMitra.data_pelanggan[0].alamat }}</td>
                                </tr>
                                <tr>
                                    <td><b>DESKRIPSI</b></td>
                                    <td class="deskripsi">{{ showDetailMitra.data_pelanggan[0].deskripsi }}</td>
                                </tr>
                                <tr>
                                    <td><b>RATING</b></td>
                                    <td class="rating"></td>
                                </tr>
                            </table>
